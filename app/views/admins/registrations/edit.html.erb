<div class="container">
  <div class="row">
    <div class="col-xs-4">
    </div>
    <div class="col-xs-4">
          <div class="title">
            <h2>管理者情報編集</h2>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :管理者名 %><br />
              <%= f.text_field :administrator_name, autofocus: true, autocomplete: "administrator_name",class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :ふりがな %><br />
              <%= f.text_field :phonetic, autofocus: true, autocomplete: "phonetic",class: "form-control" %>
            </div>

            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :パスワード %> <i>(変更しない場合は空欄にして下さい。)</i><br />
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control",style: "width:200px;" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> 文字以上の半角英数字</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :パスワードの確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",style: "width:200px;" %>
            </div>

            <div class="field">
              <%= f.label :現在のパスワード %><i>(変更前のパスワードを入力して下さい。)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control",style: "width:200px;" %>
            </div>

            <div class="actions">
              <%= f.submit "更新する" %>
            </div>
          <% end %>

          <h3>退会する</h3>

          <%= button_to "退会", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

          <%= link_to "Back", :back %>
        </div>
    </div>
</div>