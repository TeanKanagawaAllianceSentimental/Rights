<div class="container">
  <div class="row">
    <div class="col-xs-4">
    </div>
      <div class="col-xs-4">
        <h2>管理者新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :管理者名 %><br />
            <%= f.text_field :administrator_name, autofocus: true, autocomplete: "administrator_name",class: "form-control",placeholder:"管理者氏名を入力して下さい。" %>
          </div>

          <div class="field">
            <%= f.label :ふりがな %><br />
            <%= f.text_field :phonetic, autofocus: true, autocomplete: "phonetic",class: "form-control",placeholder:"ふりがなを入力して下さい。" %>
          </div>

          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",placeholder:"メールアドレスを入力して下さい。" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上入力して下さい。)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control",placeholder:"パスワードを入力して下さい。" %>
          </div>

          <div class="field">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",placeholder: "もう一度入力して下さい。" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する",class: "btn btn-default active" %>
          </div>
        <% end %>

        <%= render "admins/shared/links" %>
    </div>
  </div>
</div>