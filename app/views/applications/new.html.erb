<div class="container">
	<div class="row">
		<div class="col-md-12 text-center"">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" style="width: 45%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
			<h2>イベント情報入力フォーム</h2><br>
			<%= form_for (@application) do |form| %>
          <div class="form-group">
            <h4>利用場面</h4>
            <%= f.label :"利用場面を選択してください" %><br>
  					<%= f.select :business_type, [["国語", "国語"], ["数学", "数学"], ["英語", "英語"], ["理科", "理科"], ["社会", "社会"], ["その他", "その他"]] ,class:"form-control" %>
          </div>
          <div class="form-group">
            <h4>イベント名</h4>
            <%= f.text_field :event_title %>
          </div>
          <h4>開催日 自</h4>
            <%= datetime_select_tag :event_date_from %>
          </div>
          <div class="form-group">
            <h4>開催日 至</h4>
            <%= datetime_select_tag :event_date_to %>
          </div>
          <div class="form-group">
            <h4>公演回数</h4>
            <%= f.text_field :event_frequency %>
          </div>
          <div class="form-group">
            <h4>公演時間</h4>
            <%= f.text_field :performance_duration %>
          </div>
          <div class="form-group">
            <h4>会場名</h4>
            <%= f.text_field :vunue_hall_name %>
          </div>
          <div class="form-group">
          	<h4>出演者への報酬</h4>
						<label><%= f.radio_button :pay_for_performer, "有" %> 有 </label>
						<label><%= f.radio_button :pay_for_performer, "無" %> 無 </label>
          </div>
          <div class="form-group">
            <h4>出演者名</h4>
            <%= f.text_field :performaers_name %>
          </div>
          <div class="form-group">
            <%= f.submit "更新", class:"btn btn-md btn-primary" %>
          </div>
        <% end %>
		</div>
	</div>
</div>