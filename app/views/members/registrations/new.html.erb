<div class="title" style= "text-align: center;"><h2>ユーザー新規会員登録</h2></div>
<div class="container">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
        <div class="row">
        <div class="col-xs-3">
       </div>
              <%= f.fields_for :addresses do |corporate| %>
          <div class="col-xs-3">
            <div class="field">
               <%= corporate.label :corporate_name, "会社名" %><br>
               <%= corporate.text_field :corporate_name, class: "form-control" %>
               <%= corporate.label :contact_person_name, "ご担当者様" %><br>
               <%= corporate.text_field :contact_person_name, class: "form-control" %>
               <%= corporate.label :department, "部署名" %><br>
               <%= corporate.text_field :department, class: "form-control" %>
               <%= corporate.label :postal_code, "郵便番号" %><br>
               <%= corporate.text_field :postal_code, class: "form-control" %>
               <%= corporate.label :address1, "市区町村/番地" %><br>
               <%= corporate.text_field :address1, class: "form-control" %>
             </div>
           </div>
           <div class="col-xs-3">
             <div class="field">
               <%= corporate.label :corporate_phonetic, "ふりがな(会社名)" %><br>
               <%= corporate.text_field :corporate_phonetic, class: "form-control" %>
               <%= corporate.label :contact_person_phonetic, "ふりがな(ご担当者様)" %><br>
               <%= corporate.text_field :contact_person_phonetic, class: "form-control" %>
               <%= corporate.label :phone, "電話番号" %><br>
               <%= corporate.text_field :phone, class: "form-control" %>
               <%= corporate.label :address2, "その他" %><br>
               <%= corporate.text_field :address2, class: "form-control" %>
             </div>
           </div>
               <% end %>
         </div>
         <div class="row">
          <div class="col-xs-4">
          </div>
          <div class="col-xs-4">
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",placeholder:"メールアドレスを入力して下さい。" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control",placeholder:"パスワードを入力して下さい。" %>
            </div>

            <div class="field">
              <%= f.label :パスワードの確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",placeholder:"もう一度入力して下さい。" %>
            </div>

            <div class="actions">
              <%= f.submit "登録する" %>
            </div>
          <% end %>

              <%= render "members/shared/links" %>
          </div>
    </div>
</div>
