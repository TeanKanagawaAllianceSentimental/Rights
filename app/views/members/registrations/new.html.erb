<div class="container">
  <div class="row">
    <div class="col-xs-4">
    </div>
    <div class="col-xs-4">
          <h2>ユーザー新規会員登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <%= form_with model: @address do |t| %>
            <div class="field">
              <%= t.label :会社名 %><br />
              <%= t.text_field :corporate_name, autofocus: true, autocomplete: "corporate_name",class: "form-control",placeholder:"会社名を入力して下さい。" %>
            </div>
            <% end %>

            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",placeholder:"メールアドレスを入力して下さい。" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上の半角英数字)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control",placeholder:"パスワードを入力して下さい。" %>
            </div>

            <div class="field">
              <%= f.label :パスワードの確認 %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",placeholder:"もう一度入力して下さい。" %>
            </div>

            <div class="actions">
              <%= f.submit "登録する" %>
            </div>
          <% end %>

          <%= render "members/shared/links" %>
      </div>
    </div>
</div>