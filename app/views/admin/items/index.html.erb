<link rel="stylesheet" href="items.css">
<div class="main">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<table class="table table-hover table-inverse">
					<h2>商品管理画面</h2>
					<thead>
						<th>商品ID</th>
						<th></th>
						<th>商品名</th>
						<th>登録日</th>
						<th>更新日時</th>
						<th>販売状態</th>
					</thead>
					<tbody>
						<% @items.each do |item| %>
						<tr>
							<td><%= item.item_id %></td>
							<td><%= item.jacket_image %></td>
							<td><%= item.cd_title %></td>
							<td><%= item.created_at %></td>
							<td><%= item.updated_at %></td>
							<td><%= item.status %></td>
						<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>