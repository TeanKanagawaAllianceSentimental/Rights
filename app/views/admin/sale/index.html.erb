<!-- admin memberの販売履歴 -->

<div class="show-content" style="padding-top: 100px;">
  <div class="container">
    <div class="row" style="border-bottom: 1px solid #e6e6e6; padding-bottom: 80px;">
      <div class="col-md-2"></div>
      <div class="col-md-10">
        <h2>メンバー販売履歴</h2>
          <% @sales.each do |sale| %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th class="col-md-2" scope="col">販売日時</th>
                <th scope="col">合計金額</th>
                <th class="col-md-2" scope="col">購入者</th>
                <th scope="col">入金状況</th>
                <th scope="col">配送状況</th>
                <th scope="col" colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= japan_time(sale.updated_at) %></td>
                <td><%= sale.total_price %>円</td>
                <td>
                  <% if @shipping.present? %>
                  <%= @shipping.contact_person %>様
                  <% end %>
                </td>
                <td>
                  <div class="btn-group">
                <select class="form-control">
                    <option selected>選択</option>
                  <option>入金待ち</option>
                  <option>入金済</option>
                  <option>確認中</option>
                </select>
              </div>
                </td>
                <td>
                  <div class="btn-group">
                    <select class="form-control">
                        <option selected>選択</option>
                      <option>準備中</option>
                      <option>出荷済み</option>
                      <option>確認中</option>
                      <option>出荷準備済</option>
                    </select>
                  </div>
                </td>
                <td><%= link_to "詳細", admin_member_sale_path(@member_id, sale.id), class: "btn btn-danger" %></td>
                <td><%= link_to "削除", admin_sale_item_path(sale.id), method: :delete, class: "btn btn-light" %></td>
              </tr>
            </tbody>
          </table>
          <% end %>
      </div>
    </div>
  </div>
</div>
