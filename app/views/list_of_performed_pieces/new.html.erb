<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
			<h2>演奏利用明細書入力フォーム</h2><br>
			<table class="table table-sm">
			  <thead>
			    <tr>
			      <th scope="col">曲名</th>
			      <th scope="col">演奏回数</th>
			      <th scope="col">演奏時間</th>
			      <th scope="col"></th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td>@sale_items.items.cd_title.music_title</td>
			      <td>
			      	<select class="form-control">
					 		<%= f.number_field list_of_performed_pieces :play_frequency,min:1,max:10,step:10 %>
						  </select>
				  </td>
			      <td><div class="form-group">
            <%= f.text_field :play_duration %>
          </div></td>
			      <td><button type="button" class="btn btn-outline-dark"><% link_to "削除" %></button></td>
			    </tr>
			  </tbody>
			</table>
			<br>
			  <div class="form-group">
        	<%= f.submit "入力内容を確認する", class:"btn btn-md btn-primary" %>
      	</div>
		</div>
	</div>
</div>