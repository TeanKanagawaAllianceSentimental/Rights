<div class="index-content" style="padding-top: 100px;">
	<div class="container" style="padding-bottom: 60px;">
		<div class="row">
			<h3 class="title" style="font-size: 50px; padding-bottom: 100px;">
				Rights <br>ONLINE SHOP
			</h3>
		</div>
		<div class="row" style="height: 100vh;">
			<div class="search_count">
				<p>"<%= @search_count %>"件の商品が見つかりました</p>
			</div>
			<div class="col-md-12" style="padding-top: 80px;">
				<% @genres.each do |genre| %>
				    <div class="col-md-3">
						<% genre.genre %>
						<% genre.items.each do |item| %>
							<%= link_to item_path(item) do %>
								<%= attachment_image_tag item, :jacket_image, :fill, 200,200, format: 'jpeg', class: 'thumbnail' %>
							<% end %>
							<div class="item-detail" style="text-align: center; padding-right: 45px;">
								<%= item.cd_title %>/<%= item.artist %>
							</div>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>