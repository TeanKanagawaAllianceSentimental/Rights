<div class="show-content" style="padding-top: 100px;">
  <div class="container">
    <div class="row" style="border-bottom: 1px solid #e6e6e6; padding-bottom: 80px;">
      <div class="col-md-12">
        <h2 class="text-center">配送先住所変更フォーム</h2><br>
        <div class="form-body">
          <%= form_for (@shipping) do |f| %>
          <div class="form-group">
            <h4>会社名 団体名</h4>
            <%= f.text_field :organisation_name, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group">
            <h4>郵便番号</h4>
            <%= f.text_field :shipping_postal_code, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group">
            <h4>住所</h4>
            <%= f.text_field :shipping_address1, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group">
            <h4>ビル・マンション名</h4>
            <%= f.text_field :shipping_address2, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group">
            <h4>担当部署</h4>
            <%= f.text_field :department, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group">
            <h4>担当者</h4>
            <%= f.text_field :contact_person, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group">
            <h4>電話番号</h4>
            <%= f.text_field :user_telephone, class: "form-control col-ms-7" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "更新", class:"btn btn-md btn-info" %>
          </div>
        <% end %>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>