<div class="container">
	<div class="row">
	<%#= render 'users/frame1', user: @user, book: @book %>
		<div class="col-md-9">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
			<h2>ご注文内容の確認</h2>
			<h3>お届け先</h3>
		    <div class="card">
		      <div class="card-body">
		        <h3 class="card-title"><%= @address.organisation_name %></h3>
		        <h4 class="card-subtitle mb-2 text-muted"><%= @address.department %>様</h4>
		        <h4 class="card-subtitle mb-2 text-muted"><%= @address.contact_person %>様</h4>
		        <p class="card-text"><%= @address.shipping_postal_code %><br><%= @address.shipping_address1 %><br><%= @address.shipping_address2 %></p>
		        <% link_to "編集", '住所編集_path'() %>
		      </div>
		    </div>
			<h3>お支払い方法</h3>
				<% if @credit.present? %>
					<div class="card" style="width: 40rem;">
					  <div class="card-body">
					    <h3 class="card-title"><%= @credit.credit_card_holder %></h3>
					    <h4 class="card-subtitle mb-2 text-muted"><%= credit_card_number %></h4>
					    <p class="card-text">有効期限<%= @credit.exp_month %>/<%= @credit.exp_year %></p>
					    <% link_to "編集", '住所編集_path'() %>
					  </div>
					</div>
				<% else %>
					<div class="card" style="width: 40rem;">
					  <div class="card-body">
					    <h3 class="card-title"><%= @invoice.bill_to %></h3>
					    <h4 class="card-subtitle mb-2 text-muted"><%= @invoice.contact_person %>様</h4>
					    <p class="card-text"><%= @invoice.billing_postal_code %><br><%= @invoice.billing_address %></p>
					    <% link_to "編集", '住所編集_path'() %>
					  </div>
					</div>
				<% end %>
			<table class="table table-hover">
				<thead>
					<tr>
						<th colspan="3"><h3>ご注文の商品</h3></th>
					</tr>
				</thead>
				<% form_for (@sale_item) do |sale| %>
				<% @items.each do |item| %>
				<tbody>
					<tr>
						<td><%#= link_to user_path(book.user_id) do %>
							<%#= attachment_image_tag @sale_items.item.jacket_image, :image, :fill, 60, 60, class: "img-thumbnail" %>
							<%# end %>
							<img src="assets/soundtrack01.jpg" width=120 height="120">
						</td>
						<td><h4>商品名</h4><br><p>item.item.status</p><br><p>item.item.artist</p>
						</td>
						<td><h4>item.sub_total</h4><br>
							 <%= f.number_field sale_iltem :exp_month, min:01, max:10, step:5, class="btn-group" %>
						</td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
		<div class="col-md-3">
			<div class="card" style="width: 30rem;">
			  <div class="card-body">
			    <h3 class="card-title">ご請求額：@sale.total_price円</h4>
			    	<% f.submit "注文確定" lass="btn btn-primary btn-block" %>
			  <% end %>
			  </div>
			</div>
		</div>
	</div>
</div>