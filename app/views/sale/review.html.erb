<div class="container">
	<div class="row">
	<%#= render 'users/frame1', user: @user, book: @book %>
		<div class="col-md-9">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
			<h2>ご注文内容の確認</h2>
			<h3>お届け先</h3>
		    <div class="card">
		      <div class="card-body">
		        <h3 class="card-title">@mamber.name 様</h3>
		        <p class="card-text">150-0002<br>東京都渋谷く本町1-1-1<br>新国立劇場営業部</p>
		        <a href="#" class="card-link">編集</a>
					<a href="#" class="card-link">変更</a>
		      </div>
		    </div>
			<h3>お支払い方法</h3>
			    <div class="card">
			      <div class="card-body">
			        <h3 class="card-title">@mamber.name 様</h3>
			        <p class="card-text">150-0002<br>東京都渋谷く本町1-1-1<br>新国立劇場営業部</p>
			        <a href="#" class="card-link">編集</a>
   					<a href="#" class="card-link">変更</a>
			      </div>
			    </div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th colspan="3"><h3>ご注文の商品</h3></th>
					</tr>
				</thead>
				<%# @sale_items.each do |sale.item| %>
				<tbody>
					<tr>
						<td><%#= link_to user_path(book.user_id) do %>
							<%#= attachment_image_tag @sale_items.item.jacket_image, :image, :fill, 60, 60, class: "img-thumbnail" %>
							<%# end %>
							<img src="assets/soundtrack01.jpg" width=120 height="120">
						</td>
						<td><h4>商品名</h4><br><p>@sale_item.item.status</p><br><p>@sale_item.item.artist</p>
						</td>
						<td><h4>@sale_item.sub_total</h4><br>
							<div class="btn-group">
							  <select class="form-control">
								  <option>1</option>
								  <option>2</option>
								  <option>3</option>
								  <option>4</option>
								  <option>5</option>
								  <option>6</option>
								  <option>7</option>
								  <option>8</option>
								  <option>9</option>
								  <option>10</option>
							  </select>
							</div>
						</td>
					</tr>
					<tr>
						<td><%#= link_to user_path(book.user_id) do %>
							<%#= attachment_image_tag @sale_items.item.jacket_image, :image, :fill, 60, 60, class: "img-thumbnail" %>
							<%# end %>
							<img src="assets/soundtrack05.jpg" width=120 height="120">
						</td>
						<td><h4>商品名</h4><br><p>@sale_item.item.status</p><br><p>@sale_item.item.artist</p>
						</td>
						<td><h4>@sale_item.sub_total</h4><br>
							<div class="btn-group">
							  <select class="form-control">
								  <option>1</option>
								  <option>2</option>
								  <option>3</option>
								  <option>4</option>
								  <option>5</option>
								  <option>6</option>
								  <option>7</option>
								  <option>8</option>
								  <option>9</option>
								  <option>10</option>
							  </select>
							</div>
						</td>
					</tr>
				</tbody>
				<%# end %>
			</table>
		</div>
		<div class="col-md-3">
			<div class="card" style="width: 30rem;">
			  <div class="card-body">
			    <h4 class="card-title">ご請求額：@sale.total_price円</h4>
			    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
			    <a href="#" class="btn btn-primary btn-block">注文確定</a>
			  </div>
			</div>
		</div>
	</div>
</div>