<div class="container">
	<div class="row">
	<%#= render 'users/frame1', user: @user, book: @book %>
		<div class="col-md-9">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th colspan="3"><h2>ショッピングカート</h2></th>
					</tr>
				</thead>
				<%# @sale_items.each do |sale.item| %>
				<tbody>
					<tr>
						<td><%#= link_to user_path(book.user_id) do %>
							<%#= attachment_image_tag @sale_items.item.jacket_image, :image, :fill, 60, 60, class: "img-thumbnail" %>
							<%# end %>
							<img src="assets/soundtrack01.jpg" width=120 height="120">
						</td>
						<td><h4>商品名</h4><br><p>@sale_item.item.status</p><br><p>@sale_item.item.artist</p>
						</td>
						<td><h4>@sale_item.sub_total</h4><br>
							<div class="btn-group">
							  <select class="form-control">
								  <option>1</option>
								  <option>2</option>
								  <option>3</option>
								  <option>4</option>
								  <option>5</option>
								  <option>6</option>
								  <option>7</option>
								  <option>8</option>
								  <option>9</option>
								  <option>10</option>
							  </select>
							</div>
						</td>
					</tr>
					<tr>
						<td><%#= link_to user_path(book.user_id) do %>
							<%#= attachment_image_tag @sale_items.item.jacket_image, :image, :fill, 60, 60, class: "img-thumbnail" %>
							<%# end %>
							<img src="assets/soundtrack05.jpg" width=120 height="120">
						</td>
						<td><h4>商品名</h4><br><p>@sale_item.item.status</p><br><p>@sale_item.item.artist</p>
						</td>
						<td><h4>@sale_item.sub_total</h4><br>
							<div class="btn-group">
							  <select class="form-control">
								  <option>1</option>
								  <option>2</option>
								  <option>3</option>
								  <option>4</option>
								  <option>5</option>
								  <option>6</option>
								  <option>7</option>
								  <option>8</option>
								  <option>9</option>
								  <option>10</option>
							  </select>
							</div>
						</td>
					</tr>
				</tbody>
				<%# end %>
			</table>
		</div>
		<div class="col-md-3">
			<div class="card" style="width: 30rem;">
			  <div class="card-body">
			    <h4 class="card-title">合計@sale.total_price円</h4>
			    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
			    <div class="form-check">
				  <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
				  <label class="form-check-label" for="defaultCheck1">
				    楽曲利用申請をします
				  </label>
				</div>
				<div class="form-check">
				  <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" disabled>
				  <label class="form-check-label" for="defaultCheck2">
				    登録した申請者で楽曲利用申請をします
				  </label>
				</div>
			    <%#= check_box_tag :sample1 %>
				<%#= label_tag :sample1, "楽曲利用申請をします" %><br>
				<%#= check_box_tag :sample2 %>
				<%#= label_tag :sample2, "登録した申請者で楽曲利用申請をします" %>
			    <a href="#" class="btn btn-outline-primary btn-block">レジに進む</a>
			  </div>
			</div>
		</div>
	</div>
</div>