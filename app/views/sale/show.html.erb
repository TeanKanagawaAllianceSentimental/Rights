<div class="container">
	<div class="row">
	<%#= render 'users/frame1', user: @user, book: @book %>
		<div class="col-md-9">
		  <div class="progress">
			<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
		  </div>
			<table class="table table-hover">
			  <thead>
				<tr>
				<th colspan="3"><h2>ショッピングカート</h2></th>
				</tr>
			  </thead>
				<% @carts.each do |cart| %>
				<tbody>
				  <tr>
					<td><%#= link_to user_path(book.user_id) do %>
						<%#= attachment_image_tag @sale_items.item.jacket_image, :image, :fill, 60, 60, class: "img-thumbnail" %>
						<%# end %>
						<img src="assets/soundtrack01.jpg" width=120 height="120">
					</td>
					<td><h4><%= cart.items.cd_title %></h4><br><%= cart.item.status %><br><%= cart.item.artist %>
					</td>
					<td><h4><%= @sub_total %></h4><br>
						<div class="btn-group">
						<%= form_for(cart) do |f| %>
						  <select class="form-control">
					 		<%= f.number_field sale_iltem :quantity,min:1,max:10,step:5 %>
						  </select>
						</div>
						<% end %>

					</td>
				  </tr>
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
			<div class="card" style="width: 30rem;">
			  <div class="card-body"><br><br><br><br>
			    <h4 class="card-title">合計@total_price円</h4>
			    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
			    <div class="form-check">
			      <%= form_for(@sale) do |f| %>
			      <div class="field">
			      	<%= f.select カラム名, [["楽曲利用申請をします”, "0”], ["登録の申請者で楽曲利用申請をします”, "1”], ["楽曲利用申請をしません”, "2”]] %>
			      </div>
			      <% end %>
			    </div>
			      <%= f.submit 'レジに進む', class: "btn btn-outline-primary btn-block" %>
			    <% end %>
			  </div>
			</div>
		</div>
	</div>
</div>