<div class="show-content" style="padding-top: 100px;">
  <div class="container">
    <div class="row" style="border-bottom: 1px solid #e6e6e6; padding-bottom: 80px;">
      <div class="col-md-12">
        <h2>配送先 新規登録</h2><br>
        <%= form_for @shipping, url: generate_front_member_path do |f| %>
        <div class="form-body">
            <div class="form-group">
              <h5>会社名・団体名</h5>
              <%= f.text_field :organisation_name, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group">
              <h5>部署名</h5>
              <%= f.text_field :department, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group">
              <h5>ご担当者名</h5>
              <%= f.text_field :contact_person, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group">
              <h5>郵便番号</h5>
              <%= f.text_field :shipping_postal_code, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group">
              <h5>住所</h5>
              <%= f.text_field :shipping_address1, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group">
              <h5>ビル・マンション名</h5>
              <%= f.text_field :shipping_address2, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group">
              <h5>電話番号</h5>
              <%= f.text_field :user_telephone, class: "form-control col-ms-7" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "登録", class: "btn btn-md btn-info" %>
              <%= f.hidden_field :member_id, :value => @member.id %>
            </div>
          <% end %>
          <br>
          <% if @member.sale_shippings != nil? %>
          <h3 class="text-center">新しい配送先の登録</h3><br>
        <% @shippings.each do |shipping| %>
          <table class="table">
            <tbody>
              <tr>
                <th scope="row" class="col-md-2">法人名 団体名</th>
                <td class="col-md-7"><%= shipping.organisation_name %></td>
              </tr>
              <tr>
                <th scope="row" class="col-md-2">郵便番号</th>
                <td class="col-md-7"><%= shipping.shipping_postal_code %></td>
              </tr>
              <tr>
                <th scope="row" class="col-md-2">住所1</th>
                <td class="col-md-7"><%= shipping.shipping_address1 %></td>
              </tr>
              <tr>
                <th scope="row" class="col-md-2">ビル・マンション名</th>
                <td class="col-md-7"><%= shipping.shipping_address2 %></td>
              </tr>
              <tr>
                <th scope="row" class="col-md-2">ご担当部署</th>
                <td class="col-md-7"><%= shipping.department %></td>
              </tr>
              <tr>
                <th scope="row" class="col-md-2">ご担当者名</th>
                <td class="col-md-7"><%= shipping.contact_person %></td>
              </tr>
              <tr>
                <th scope="row" class="col-md-2">電話番号</th>
                <td class="col-md-7"><%= shipping.user_telephone %></td>
              </tr>
            </tbody>
          </table>
          <% end %>
          <br>
        </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
