<%= stylesheet_link_tag 'front/items' %>
<div class="index-content" style="padding-top: 100px;">
	<div class="container" style="padding-bottom: 60px;">
		<div class="row">
			<h3 class="title" style="font-size: 50px; padding-bottom: 100px;">
				Rights <br>ONLINE SHOP
			</h3>
		</div>
		<div class="row" style="height: 100vh;">
			<div class="pick-up">
				<p>NEW ARRIVAL</p>
			</div>
			<div class="col-md-12" style="padding-top: 80px;">
				<% @items.each do |item| %>
					<div class="col-md-3" style="padding-top: 40px; ">
						<%= link_to item_path(item) do %>
							<%= attachment_image_tag item, :jacket_image, :fill, 200,200, format:'jpeg', class: "thumbnail" %>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
