<div class="show-content" style="padding-top: 180px;">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-1">
				<h3 class="title" style="font-size: 50px; padding-bottom: 50px; margin-top: 0;" >
					Rights <br>ONLINE SHOP</h3>
				<table class="table table-inverce">
					<tbody>
						<tr>
							<th>Artist</th>
							<td><%= @item.artist %></td>
						</tr>
						<tr>
							<th>Title</th>
							<td><%= @item.cd_title %></td>
						</tr>
						<tr>
							<th>Price</th>
							<td>Â¥<%= @item.unit_price %></td>
						</tr>
						<tr>
							<th>Release</th>
							<td><%= japan_time(@item.created_at) %></td>
						</tr>
						<tr>
							<th>Single/Albam</th>
							<td><%= @item.package %></td>
						</tr>
					</tbody>
				</table>
				<div class="action" style="padding-top: 40px;">
					<span><%= link_to carts_path, class: 'btn btn-warning col-md-12' do %>
						<i class="fas fa-cart-plus"></i>
						<% end %>
					</span>
				</div>
			</div>
			<div class="col-md-6 col-md-offset-1">
				<%= attachment_image_tag @item, :jacket_image, :fill, 500, 440, format: 'jpeg', class: "thumbnail" %>
			</div>
		</div>
	</div>
</div>
