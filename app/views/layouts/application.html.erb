<!DOCTYPE html>
<html>
  <head>
    <title>Cdshop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class = "header">
        <nav class="nav navbar-default navbar-fixed-top">
          <div class="container">
            <ul class="pull-left">
              <h3>Rights</h3>
            </ul>
            <ul class="nav navbar-nav navbar-right" style="padding-top: 5px;">
              <% if user_signed_in? %>
                <li><%= link_to 'My Page', root_path, class: "my_page" %></li>
                <li><%= link_to 'Logout', destroy_user_session_path, class: "logout" %></li>
                <li><%= link_to root_path do %>
                  <i class="fas fa-user fa-2x"></i>
                  <% end %>
                </li>
                <li id="fat-menu" class="dropdown">
                   <a href="" class="dropdown-toggle" data-toggle="dropdown">
                     商品情報 <b class="caret"></b>
                   <ul class = "dropdown-menu">
                      <li><%= link_to "管理者　商品一覧", admin_rights_path %></li>
                      <li><%= link_to "商品登録", new_admin_right_path %></li>
                      <li><%= link_to "ジャンル一覧", admin_rights_path %></li>
                      <li><%= link_to "会員 商品一覧", items_index_path %></li>
                      <li><%= link_to "会員 商品詳細", items_show_path %></li>
                   </ul>
                </li>
                <% else %>
                  <li><%= link_to root_path do %>
                    <i class="fas fa-sign-in-alt fa-2x"></i>
                    <% end %>
                  </li>
                  <li><%= link_to root_path do %>
                    <i class="fab fa-expeditedssl fa-2x"></i>
                    <% end %>
                  </li>
                  <li><%= link_to items_show_path do %>
                    <i class="fas fa-shopping-cart fa-2x"></i>
                    <% end %>
                  </li>
                  <li><%= link_to root_path do %>
                    <i class="fas fa-user fa-2x"></i>
                    <% end %>
                  </li>
                  <li id="fat-menu" class="dropdown">
                     <a href="" class="dropdown-toggle" data-toggle="dropdown">
                       管理画面リンク <b class="caret"></b></a>
                     <ul class = "dropdown-menu">
                        <li><%= link_to "管理者　商品一覧", admin_rights_path %></li>
                     </ul>
                   </li>
                   <li id="fat-menu" class="dropdown">
                     <a href="" class="dropdown-toggle" data-toggle="dropdown">
                       フロント画面作業用リンク <b class="caret"></b></a>
                     <ul class = "dropdown-menu">
                        <li><%= link_to "商品一覧", items_index_path %></li>
                        <li><%= link_to "商品詳細", items_show_path%></li>
                        <li><%= link_to "会員登録", root_path %></li>
                        <li><%= link_to "ログイン", root_path %></li>
                        <li><%= link_to "会員情報編集", root_path %></li>
                        <li><%= link_to "sale_items", root_path %></li>
                        <li><%= link_to "orderhistory", root_path %></li>
                        <li><%= link_to "applicants", root_path %></li>
                        <li><%= link_to "applications", root_path %></li>
                        <li><%= link_to "cart", root_path%></li>
                        <li><%= link_to "sales", root_path%></li>
                        <li><%= link_to "shipping_address", root_path%></li>
                        <li><%= link_to "pay_select", root_path%></li>
                     </ul>
                   </li>
                <% end %>
            </ul>
        </nav>
      </div>
    <%= yield %>
  </body>
</html>
